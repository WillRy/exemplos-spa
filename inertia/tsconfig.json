{
    "compilerOptions": {
        "target": "esnext",
        "moduleResolution": "node",
        "importHelpers": true,

        "allowSyntheticDefaultImports": true,
        "allowJs": true,
        "resolveJsonModule": true,
        "sourceMap": true,
        "baseUrl": ".",
        "outDir": "./dist",
        "noImplicitAny": false,

        "composite": false,
        "declaration": true,
        "declarationMap": true,
        "esModuleInterop": true,
        "forceConsistentCasingInFileNames": true,
        "inlineSources": false,
        "isolatedModules": true,
        "noUnusedLocals": false,
        "noUnusedParameters": false,
        "preserveWatchOutput": true,
        "skipLibCheck": true,
        "strict": true
    },
    "include": [
        "env.d.ts",
        "resources/**/*.ts",
        "resources/**/*.d.ts",
        "resources/**/*.vue"
    ]
}
