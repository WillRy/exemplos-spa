{
  "extends": "@vue/tsconfig/tsconfig.dom.json",
  "include": [
      "vite.config.*",
      "resources/js/**/*.ts",
      "resources/js/**/*.js",
      "resources/js/**/*.d.ts",
      "resources/js/**/*.vue"
  ],
  "compilerOptions": {
    "composite": true,
    "noEmit": true,
    "allowJs": true,
    "skipLibCheck": true,
    "noImplicitAny": false,
    "verbatimModuleSyntax": false,
    "allowImportingTsExtensions": true,
    "module": "ESNext",
    "moduleResolution": "Bundler",
    "baseUrl": ".",
    "tsBuildInfoFile": "./node_modules/.tmp/tsconfig.app.tsbuildinfo",
    "paths": {
      "@/*": ["./resources/js/*"]
    }
  }
}
